<div class="home-header">
  {{#if search}}
    <h1>You are looking for: <span>{{search}}</span></h1>
    {{#if thinkingsQty}}
      <p><span>{{thinkingsQty}}</span> Thinking were found</p>
    {{else}}
      <p>No Thinking were found for the term: <span>{{search}}</span></p>
    {{/if}}
  {{else}}
    <h1>Get to know some <span>Thinking</span>:</h1>
  {{/if}}
  <form action="/" method="get">
    <input type="text" name="search" placeholder="You looking for something?" />
    <input type="submit" class="btn" value="Search" />
  </form>
  <div class="order-container">
    <span>Order for:</span>
    <form action="/" method="get">
      <input type="hidden" name="search" value="{{this.search}}" />
      <input type="hidden" name="order" value="new" />
      <button type="submit"><i class="bi bi-arrow-up"></i></button>
    </form>
    <form action="/" method="get">
      <input type="hidden" name="search" value="{{this.search}}" />
      <input type="hidden" name="order" value="old" />
      <button type="submit"><i class="bi bi-arrow-down"></i></button>
    </form>
    <a href="/">Clear</a>
  </div>
</div>
<div class="thinkings-container">
  {{#each thinkings}}
    <figure>
      <blockquote>
        "{{this.title}}"
      </blockquote>
      <figcaption>By <span>{{this.User.name}}</span></figcaption>
    </figure>
  {{/each}}
</div>